<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>SimpleServlet</servlet-name>
        <servlet-class>it.advancia.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>it.advancia.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertLogServlet</servlet-name>
        <servlet-class>it.advancia.servlets.InsertLogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertAnagraficaServlet</servlet-name>
        <servlet-class>it.advancia.servlets.InsertAnagraficaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IdRiferimentoServlet</servlet-name>
        <servlet-class>it.advancia.servlets.IdRiferimentoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertLogServlet</servlet-name>
        <url-pattern>/inserisci</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertAnagraficaServlet</servlet-name>
        <url-pattern>/inserisciAnagrafica</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IdRiferimentoServlet</servlet-name>
        <url-pattern>/idriferimenti</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <filter>
	<filter-name>Character Encoding</filter-name>
	<filter-class>it.advancia.utility.CharsetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Character Encoding</filter-name>
        <servlet-name>InsertLogServlet</servlet-name>	
        <servlet-name>InsertAnagraficaServlet</servlet-name>	
    </filter-mapping>
</web-app>
